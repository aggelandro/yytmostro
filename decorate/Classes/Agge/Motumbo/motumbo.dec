ACTOR DetonableWaskaProjectile {
  Radius 4
  Height 8
  Speed 25
  Damage 30
  Scale 1.5
  RenderStyle Normal
  Projectile
  +MTHRUSPECIES
  -NOGRAVITY
	+BRIGHT
  Gravity 0.7
  
  States {
	  Spawn:
		  TNT1 A 0 NoDelay A_TakeInventory("WeaponSpecialAction",1,0,AAPTR_TARGET)
			WLS1 A 2
			WLS1 AAABBBCCC 4 A_JumpIfInventory("WeaponSpecialAction",1,"Explosion",AAPTR_TARGET)
			Goto SpawnLoop
  
    SpawnLoop:
		  WLS1 D 1 A_JumpIfInventory("WeaponSpecialAction",1,"Explosion",AAPTR_TARGET)
	    Loop
			
	  Explosion:
		  TNT1 A 0 A_TakeInventory("WeaponSpecialAction",1,0,AAPTR_TARGET)
			TNT1 A 0 A_PlaySound("agge/explosion", CHAN_AUTO)
			TNT1 A 0 A_ChangeVelocity(0,0,0,CVF_REPLACE)
			TNT1 A 0 A_ChangeFlag("NOGRAVITY", true)
			TNT1 A 0 A_ChangeFlag("NOINTERACTION", true)
			TNT1 A 0 A_SetScale(2.0, 1.0)
			TNT1 A 0 A_PlaySound("agge/dropfire", CHAN_6, 1.0, TRUE)
			ARX1 AAAAAAAAAAA 1 A_SpawnItemEx("WaskaRain",random(-128,128),random(-128,128),0,0,0,0)
			ARX1 AAAAAAAAAAA 1 A_SpawnItemEx("WaskaRain",random(-128,128),random(-128,128),0,0,0,0)
			ARX1 BBBBBBBBBBB 1 A_SpawnItemEx("WaskaRain",random(-128,128),random(-128,128),0,0,0,0)
			ARX1 BBBBBBBBBBB 1 A_SpawnItemEx("WaskaRain",random(-128,128),random(-128,128),0,0,0,0)
			ARX1 CCCCCCCCCCC 1 A_SpawnItemEx("WaskaRain",random(-128,128),random(-128,128),0,0,0,0)
			ARX1 CCCCCCCCCCC 1 A_SpawnItemEx("WaskaRain",random(-128,128),random(-128,128),0,0,0,0)
			ARX1 DDDDDDDDDDD 1 A_SpawnItemEx("WaskaRain",random(-128,128),random(-128,128),0,0,0,0)
			ARX1 DDDDDDDDDDD 1 A_SpawnItemEx("WaskaRain",random(-128,128),random(-128,128),0,0,0,0)
			ARX1 EEEEEEEEEEE 1 A_SpawnItemEx("WaskaRain",random(-128,128),random(-128,128),0,0,0,0)
			ARX1 EEEEEEEEEEE 1 A_SpawnItemEx("WaskaRain",random(-128,128),random(-128,128),0,0,0,0)
			ARX1 FFFFFFFFFFF 1 A_SpawnItemEx("WaskaRain",random(-128,128),random(-128,128),0,0,0,0)
			ARX1 FFFFFFFFFFF 1 A_SpawnItemEx("WaskaRain",random(-128,128),random(-128,128),0,0,0,0)
			ARX1 GGGGGGGGGGG 1 A_SpawnItemEx("WaskaRain",random(-128,128),random(-128,128),0,0,0,0)
			ARX1 GGGGGGGGGGG 1 A_SpawnItemEx("WaskaRain",random(-128,128),random(-128,128),0,0,0,0)
			TNT1 A 0 A_StopSound(CHAN_6)
	    Goto ExDeath
			
		ExDeath:
			ARX1 HIJKLMN 5
			Stop
	  
	  Crash:
	  XDeath:
	    TNT1 A 0 A_PlaySound("agge/waskadeath", CHAN_AUTO)
	    TNT1 B 0 A_SpawnItemEx("WaskaDrop",40,0,-10,5,0,3,0,28,0)
	    TNT1 B 0 A_SpawnItemEx("WaskaDrop",40,0,-10,5,5,3,45,28,0)
	    TNT1 B 0 A_SpawnItemEx("WaskaDrop",40,0,-10,0,5,3,90,28,0)
