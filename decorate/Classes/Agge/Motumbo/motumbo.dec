ACTOR Motumbo : Weapon {

  Inventory.PickupMessage "¡Tenés la de Motumbo! ¡¡Agarrala bien!!"
  Obituary "%o fue PUIJeado por la pijza entera de Motumbo."
  Weapon.AmmoType "RocketAmmo"
  Weapon.AmmoGive 10
  Weapon.AmmoUse 1
  Weapon.AmmoType2 "RocketAmmo"
  Weapon.AmmoUse2 2
  +WEAPON.NOAUTOFIRE
  
  States {
    Spawn:
			WCHS A -1
			Stop
		
    Ready:
	    DFPR AAAAABBBBBCCCCCBBBBB 1 A_WeaponReady
	    Loop
	
	  Deselect:
	    DFPR A 1 A_Lower
	    Loop
	  
	  Select:
	    DFPR A 1 A_Raise
	    Loop
	
	  Fire:
	    DFPR ADEF 3
	    TNT1 F 0 A_PlaySound("agge/waskafire",0)
			TNT1 A 0 A_AlertMonsters
	    DFPR F 12 A_FireCustomMissile("WaskaProjectile",0,TRUE,0,0,0,12)
	    DFPR A 1 A_ReFire
			Goto Ready
	  
	  AltFire:
	    DFPR ADEF 3
			DFPR ADEF 3
			DFPR ADEF 3
			TNT1 F 0 A_PlaySound("agge/waskafire",0)
	    TNT1 A 0 A_AlertMonsters
	    DFPR F 50 A_FireCustomMissile("DetonableWaskaProjectile",0,TRUE,0,0,0,25)
	    DFPR A 1 A_ReFire
      Goto Ready
  }
}
  
ACTOR WaskaProjectile {
  Radius 4
  Height 8
  Speed 30
  Damage 30
  Scale 1.5
  Projectile
  +MTHRUSPECIES
  -NOGRAVITY
  Gravity 0.7
  
  States {
	  Spawn:
	    WLS1 AAABBBCCC 4 BRIGHT
	    Goto SpawnLoop
	
	  SpawnLoop:
	    WLS1 D 1 BRIGHT
	    Loop
	  
	  Crash:
	  XDeath:
	    TNT1 A 0 A_PlaySound("agge/waskadeath")
	    TNT1 B 0 A_SpawnItemEx("WaskaDrop",40,0,-10,5,0,3,0,28,0)
	    TNT1 B 0 A_SpawnItemEx("WaskaDrop",40,0,-10,5,5,3,45,28,0)
	    TNT1 B 0 A_SpawnItemEx("WaskaDrop",40,0,-10,0,5,3,90,28,0)
	    TNT1 B 0 A_SpawnItemEx("WaskaDrop",40,0,-10,-5,5,3,135,28,0)
	    TNT1 B 0 A_SpawnItemEx("WaskaDrop",40,0,-10,-5,0,3,180,28,0)
      TNT1 B 0 A_SpawnItemEx("WaskaDrop",40,0,-10,-5,-5,3,225,28,0)
	    TNT1 B 0 A_SpawnItemEx("WaskaDrop",40,0,-10,0,-5,3,270,28,0)
	    TNT1 B 0 A_SpawnItemEx("WaskaDrop",40,0,-10,5,-5,3,315,28,0)
			Stop
	
	  Death:
			TNT1 A 0 A_SetScale(1.0, 1.0)
	    TNT1 A 0 A_PlaySound("agge/waskadeath")
	    BGIB ABCDEFGH 2 BRIGHT
	    BGIB I 50 BRIGHT
	    Stop
  }
}

