	    TNT1 B 0 A_SpawnItemEx("WaskaDrop",40,0,-10,0,-5,3,270,28,0)
	    TNT1 B 0 A_SpawnItemEx("WaskaDrop",40,0,-10,5,-5,3,315,28,0)
			Stop
	  
	  Death:
			TNT1 A 0 A_SetScale(1.0)
	    TNT1 A 0 A_PlaySound("agge/waskadeath")
			BGIB ABCDEFGH 2
	    Stop
  }
}

