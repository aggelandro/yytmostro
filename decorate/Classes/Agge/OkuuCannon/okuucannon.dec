ACTOR AggeExplosion
{
	DamageType "Friendly"
	+FORCERADIUSDMG
	+NODAMAGETHRUST
	+NOINTERACTION
	States
	{
	Spawn:
		MISL B 5 NoDelay A_PlaySound("weapons/rocklx")
		MISL C 4 A_Explode(128,150,0,1,0)
		MISL D 4 
		Stop
	}
}